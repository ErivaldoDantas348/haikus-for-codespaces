  <button onclick="retornarTexto()">Enviar</button>

  
  <script>
  function retornarTexto() {
    const texto = document.getElementById("comentario").value;
    const text2 = document.getElementById("vagas").value;
    const text3 = document.getElementById("local").value;
    document.getElementById("resultado").innerText = texto;
    document.getElementById("resultad2").innerText = text2;
    document.getElementById("resultad3").innerText = text3;
  }
    function mostrar() {
    const select = document.getElementById("lista");
    const valor = select.value;
    document.getElementById("resultado10").innerText = valor;
    document.getElementById("resultado8").innerText = valor; 
    document.getElementById("resultado12").innerText = valor;   
  }
</script>
